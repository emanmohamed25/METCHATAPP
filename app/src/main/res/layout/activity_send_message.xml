<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor.newchat.sendmessage.SendMessageActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Of Students"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.264"
        tools:layout_editor_absoluteX="0dp">

        <CheckBox
            android:id="@+id/chkBName1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Eman Mohamed"
            android:textSize="30dp" />

        <CheckBox
            android:id="@+id/chkBName2"

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Sherif Shabana"

            android:textSize="30dp" />

        <CheckBox
            android:id="@+id/chkBName3"

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Abdelrahman Ebrahim"

            android:textSize="30dp" />
        <CheckBox
            android:id="@+id/chkBName4"

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Rana Elsayed"

            android:textSize="30dp" />
        <CheckBox
            android:id="@+id/chkBName5"

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Rana Alaa"
            android:textSize="30dp" />


    </LinearLayout>

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:hint="enter your message.."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:background="@drawable/cercle_btn"
        android:padding="20dp"
        android:text="Send"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>