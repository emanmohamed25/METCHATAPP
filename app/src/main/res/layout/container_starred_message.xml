<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/white">

    <ImageView
        android:layout_marginBottom="27dp"
        android:id="@+id/senderePhoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/userphoto1" />

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/black"
            android:width="66px"
            android:id="@+id/UserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sender's Name"
            android:textSize="16sp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/bubblestareed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/background_received_messages"
            android:orientation="vertical">
            <TextView

                android:id="@+id/bubble_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:lineHeight="20dp"
                android:maxWidth="300dp"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView

                android:id="@+id/bubble_time_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:lineHeight="15dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </LinearLayout>


    </LinearLayout>



</LinearLayout>